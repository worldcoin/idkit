{
  "name": "idkit",
  "version": "4.0.0",
  "private": true,
  "description": "IDKit - World ID SDK with Rust Core",
  "devDependencies": {
    "prettier": "^3.8.1"
  },
  "pnpm": {
    "overrides": {
      "happy-dom": ">=20.0.0"
    }
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "format:js": "pnpm -C js format",
    "lint:js": "pnpm -C js lint:format",
    "lint:rust": "cargo fmt --all -- --check && cargo clippy --all-targets --all-features -- -D warnings"
  },
  "keywords": [
    "worldcoin",
    "world-id",
    "idkit",
    "rust",
    "wasm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/worldcoin/idkit.git"
  },
  "license": "MIT"
}
