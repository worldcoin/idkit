{
  "name": "@worldcoin/idkit-standalone",
  "version": "3.0.7",
  "description": "Standalone JS bundle for IDKit built on @worldcoin/idkit-core",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && cp -R ../core/wasm dist/wasm",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "worldcoin",
    "world-id",
    "idkit",
    "identity",
    "proof-of-personhood",
    "zero-knowledge"
  ],
  "author": "Tools for Humanity",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/worldcoin/idkit"
  },
  "dependencies": {
    "@worldcoin/idkit-core": "workspace:^"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  }
}
